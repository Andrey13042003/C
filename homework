#include <stdio.h>
#include <math.h>
int main(void){
    float a, b, c, d, x1, x2;
    printf("Введите числа: a, b, c\n");
    scanf("%f %f %f", &a, &b, &c);
    if (a == 0)
    {
        printf("На ноль делить нельзя(-b / (2 * 0). Введите другие числа.");
    }
    else
    {
        d = pow(b, 2) - (4 * a * c);
        if (d > 0)
        {
            x1 = (-b + sqrt(d)) / (2 * a);
            x2 = (-b - sqrt(d)) / (2 * a);
            printf("x1 = %f\nx2 = %f", x1, x2);
        }
        else if (d == 0)
        {
            x1 = -b / (2 * a);
            printf("x1 = x2 = %f, корни совпадают.", x1);
        }
        else if (d < 0)
        {
            printf("Нет корней, т.к. дискриминант < 0");
        }
    }
    return 0;
}
